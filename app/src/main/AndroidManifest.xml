<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for voice recording -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Permissions for file storage (Android 12+) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <!-- Camera permission for instant capture -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Foreground service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />

    <!-- Post notifications permission (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".NoteDropApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteDrop">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NoteDrop.Starting"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Quick Capture Widget -->
        <receiver
            android:name=".ui.widget.QuickCaptureWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_quick_capture_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/quick_capture_widget_info" />
        </receiver>

        <!-- Text Capture Widget (1x1) -->
        <receiver
            android:name=".ui.widget.TextCaptureWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_text_capture_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/text_capture_widget_info" />
        </receiver>

        <!-- Voice Capture Widget (1x1) -->
        <receiver
            android:name=".ui.widget.VoiceCaptureWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_voice_capture_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/voice_capture_widget_info" />
        </receiver>

        <!-- Camera Capture Widget (1x1) -->
        <receiver
            android:name=".ui.widget.CameraCaptureWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_camera_capture_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/camera_capture_widget_info" />
        </receiver>

        <!-- Text Input Activity (Dialog style) -->
        <activity
            android:name=".ui.widget.action.TextInputActivity"
            android:exported="false"
            android:theme="@style/Theme.NoteDrop.Dialog"
            android:excludeFromRecents="true" />

        <!-- Transparent Camera Activity -->
        <activity
            android:name=".ui.widget.camera.TransparentCameraActivity"
            android:exported="false"
            android:theme="@style/Theme.NoteDrop.Transparent"
            android:excludeFromRecents="true"
            android:showWhenLocked="true" />

        <!-- Voice Recording Service -->
        <service
            android:name=".ui.widget.service.VoiceRecordingService"
            android:exported="false"
            android:foregroundServiceType="microphone" />

    </application>

</manifest>