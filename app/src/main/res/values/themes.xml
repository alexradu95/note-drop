<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme with Material 3 -->
    <style name="Theme.NoteDrop" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen theme for Android 12+ -->
    <style name="Theme.NoteDrop.Starting" parent="Theme.SplashScreen">
        <!-- Splash screen background color -->
        <item name="windowSplashScreenBackground">@android:color/system_neutral1_50</item>

        <!-- Splash screen animated icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

        <!-- Animation duration (optional) -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Post-splash screen theme to apply -->
        <item name="postSplashScreenTheme">@style/Theme.NoteDrop</item>

        <!-- Icon background color (optional) -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/system_accent1_100</item>
    </style>

</resources>